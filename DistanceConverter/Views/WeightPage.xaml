<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistanceConverter.Views.WeightPage">
    <ContentPage.Content>
        <ScrollView>
        <Grid Padding="20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/> <!--Column 0 -->
                <ColumnDefinition Width="10"/> <!--Column 0 -->
                <ColumnDefinition Width="*"/> <!--Column 1 -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/> <!--Row 0 -->
                <RowDefinition Height="20"/> <!--Row 1 -->
                <RowDefinition Height="auto"/> <!--Row 2 -->
                <RowDefinition Height="20"/> <!--Row 3 -->
                <RowDefinition Height="auto"/> <!--Row 4 -->
                <RowDefinition Height="20"/> <!--Row 5 -->
                <RowDefinition Height="auto"/> <!--Row 6 -->
                <RowDefinition Height="20"/> <!--Row 7 -->
                <RowDefinition Height="auto"/> <!--Row 8 -->
                <RowDefinition Height="20"/> <!--Row 9 -->
                <RowDefinition Height="auto"/> <!--Row 10 -->
                <RowDefinition Height="20"/> <!--Row 11 -->
                <RowDefinition Height="auto"/> <!--Row 12 -->
                <RowDefinition Height="60"/> <!--Row 13 -->
                <RowDefinition Height="auto"/> <!--Row 14 -->


            </Grid.RowDefinitions>
            
            <Label Grid.Column="0" Grid.Row="0" Margin="0,7,0,0" Text="Ounce" HorizontalTextAlignment="End"/>
            <Entry Grid.Column="2" Grid.Row="0" x:Name="txtOunce" Keyboard="Numeric" TextChanged="TxtOunce_OnTextChanged" />
            
            <Label Grid.Column="0" Grid.Row="2" Margin="0,7,0,0" Text="Grams" HorizontalTextAlignment="End"/>
            <Entry Grid.Column="2" Grid.Row="2" x:Name="txtgGrams" Keyboard="Numeric" TextChanged="TxtgGrams_OnTextChanged"/>
            
            <Label Grid.Column="0" Grid.Row="4" Margin="0,7,0,0" Text="Pounds" HorizontalTextAlignment="End"/>
            <Entry Grid.Column="2" Grid.Row="4" x:Name="txtPounds" Keyboard="Numeric" TextChanged="TxtPounds_OnTextChanged"/>
            
            <Label Grid.Column="0" Grid.Row="6" Margin="0,7,0,0" Text="Kilograms" HorizontalTextAlignment="End"/>
            <Entry Grid.Column="2" Grid.Row="6" x:Name="txtKilograms" Keyboard="Numeric" TextChanged="TxtKilograms_OnTextChanged"/>
            
            
            <StackLayout Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="14">
                <Button Text="Clear" HorizontalOptions="FillAndExpand" Clicked="Clear_OnClicked"/>
                <Button Text="Convert" HorizontalOptions="FillAndExpand" Clicked="Convert_OnClicked"/>
            </StackLayout>
            
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>